<div class="container mt-3">
  <nav class="d-flex justify-content-around align-items-center border-bottom">
    <h1>Choose a Movie to add to your List </h1>
    <%= link_to "Cancel", list_path(@list), class: "btn btn-danger" %>
  </nav>
  <div class="mt-3 row g-3 align-items-center">
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <div class="row g-3 justify-content-center">
      <div class="col-3">
        <%= f.input :comment %>
      </div>
      <div class="col-3">
        <%= f.association :movie, collection: @movies.each {|movie| movie.title} %>
      </div>
      <div class="row g-3 justify-content-center">
        <div class="col-2 justify-content-center">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
