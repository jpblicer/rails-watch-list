<div class="container mt-3">
  <nav class="d-flex justify-content-around align-items-center border-bottom">
    <h1>Name Your New List</h1>
    <%= link_to "Cancel", lists_path, class: "btn btn-danger" %>
  </nav>
  <div class="mt-3 row g-3 align-items-center">
    <%= simple_form_for @list do |f| %>
    <div class="row g-3 justify-content-center">
      <div class="col-3">
        <%= f.input :name, label: false, placeholder: "Name Your List"%>
      </div>
      <div class="col-3">
        <%= f.input :photo, as: :file %>
      </div>
      <div class="col-2">
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
